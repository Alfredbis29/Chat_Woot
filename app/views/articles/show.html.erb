<div class="hc-page">
  <header class="hc-header">
    <div class="hc-header__content">
      <nav>
        <%= link_to "← Back to Help Center", root_path, class: "hc-back-link" %>
      </nav>
      <h1 class="hc-title" style="font-size: 2.5rem;"><%= @article[:title] %></h1>
      <p class="hc-subtitle" style="font-size: 0.9rem; opacity: 0.8;"><%= @article[:category] %></p>
    </div>
  </header>

  <main class="hc-main">
    <section class="hc-section">
      <article style="max-width: 800px; margin: 0 auto;">
        <nav class="hc-breadcrumb" aria-label="Breadcrumb">
          <%= link_to "Home", root_path %> / 
          <%= link_to @article[:category], root_path(anchor: @article[:category].parameterize) %> / 
          <span><%= @article[:title] %></span>
        </nav>
        <div style="font-size: 1.125rem; line-height: 1.8; color: #334155;">
          <%= simple_format(@article[:content]) %>
        </div>
        <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #e2e8f0;">
          <%= link_to "← Back to Help Center", root_path, style: "color: #3b82f6; text-decoration: none; font-weight: 500;" %>
        </div>
      </article>
    </section>
  </main>
</div>
