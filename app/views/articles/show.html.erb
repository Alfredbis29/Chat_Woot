<div class="hc-page">
  <header class="hc-header">
    <div class="hc-header__content">
      <nav>
        <%= link_to "‚Üê Back to Help Center", root_path, class: "hc-back-link" %>
      </nav>
      <h1 class="hc-title" style="font-size: 2.5rem;"><%= @article[:title] %></h1>
      <div style="display: flex; gap: 0.75rem; justify-content: center; flex-wrap: wrap; margin-top: 0.75rem; align-items: center;">
        <span class="hc-tag"><%= @article[:category] %></span>
        <span style="color: rgba(255, 255, 255, 0.8); font-size: 0.875rem;">‚è±Ô∏è <%= @reading_time %> min read</span>
        <% if @article[:tags] %>
          <% @article[:tags].each do |tag| %>
            <span class="hc-tag hc-tag--secondary"><%= tag %></span>
          <% end %>
        <% end %>
      </div>
    </div>
  </header>

  <main class="hc-main">
    <section class="hc-section">
      <article style="max-width: 800px; margin: 0 auto;">
        <nav class="hc-breadcrumb" aria-label="Breadcrumb">
          <%= link_to "Home", root_path %> / 
          <%= link_to @article[:category], root_path(anchor: @article[:category].parameterize) %> / 
          <span><%= @article[:title] %></span>
        </nav>
        <div style="font-size: 1.125rem; line-height: 1.8; color: #334155;">
          <%= simple_format(@article[:content]) %>
        </div>
        <div class="hc-feedback" style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid #e2e8f0;">
          <h3 style="margin: 0 0 1rem; color: #1e293b; font-size: 1.125rem;">Was this article helpful?</h3>
          <div style="display: flex; gap: 1rem;">
            <button class="hc-feedback-btn hc-feedback-btn--yes" onclick="handleFeedback('yes', '<%= @slug %>')">üëç Yes</button>
            <button class="hc-feedback-btn hc-feedback-btn--no" onclick="handleFeedback('no', '<%= @slug %>')">üëé No</button>
          </div>
          <p id="feedback-message" style="margin: 1rem 0 0; color: #64748b; font-size: 0.875rem; display: none;"></p>
        </div>
        <% if @related_articles.any? %>
          <div style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid #e2e8f0;">
            <h3 style="margin: 0 0 1rem; color: #1e293b; font-size: 1.25rem;">Related Articles</h3>
            <div style="display: grid; gap: 1rem;">
              <% @related_articles.each do |related| %>
                <div style="padding: 1rem; background-color: #f8fafc; border-radius: 0.5rem; border: 1px solid #e2e8f0;">
                  <%= link_to related[:title], article_path(related[:slug]), style: "color: #3b82f6; text-decoration: none; font-weight: 500; display: block;" %>
                  <p style="margin: 0.5rem 0 0; font-size: 0.875rem; color: #64748b;"><%= related[:category] %></p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #e2e8f0;">
          <%= link_to "‚Üê Back to Help Center", root_path, style: "color: #3b82f6; text-decoration: none; font-weight: 500;" %>
        </div>
      </article>
    </section>
  </main>
</div>
